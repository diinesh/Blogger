<!doctype html>
<html>
<head>
    <title>Authenticator</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
	<div class="col-sm-6 col-sm-offset-3">
	
    <h1><span class="fa fa-sign-in"></span><%= verb %> Post</h1>
	
     <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form  action="/post/edit/<%= post.id %>" method="get" enctype="multipart/form-data">
        
        <div class="form-group">
            <label>Title </label>
            <%= post.title %>
        </div>

         <div class="form-group">
            <label>Content </label>
            <%= post.content %>
        </div>

        <div class="form-group">
            <label>Image</label>
            <% if (post.image) {  %>
                <img src="<%= image %>" style="height: 200px; width:200px"/>
            <% } %>          
        </div>

       
        <button type="submit" class="btn btn-warning btn-lg" name="post" >Edit Post</button>
    </form>

    <hr>
    <div class="page-header">
        <ul>
            <h5>
            Comments
            </h5>
             <% for(var j=post.comments.length-1; j>=0; j--) {  
                %>
                <span> <h6><%= post.comments[j].username %>  :  </h6>
                <%= post.comments[j].content %>  </span>                          
             <%}%>    
          
           
           <h5>Add Comment </h5>
            <form  action="/addComment/<%= post._id %>" method="post" >
                <!-- <textarea class="form-control" rows="3" id="comment"></textarea> -->
                  <input type="textarea" class="form-control" name="comment" value="">
                 <button type="submit" class="btn btn-warning btn-sm" name="postComment" > Save</button>
            </form>
    </ul>
    </div>

</div>

</body>
</html>